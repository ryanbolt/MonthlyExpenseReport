<Window x:Class="MonthlyExpenseReport.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MonthlyExpenseReport"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Frame x:Name="billFrame" Content="" Height="287" Margin="0,22,0,0" VerticalAlignment="Top" NavigationUIVisibility="Hidden"/>
        <Menu x:Name="menu" HorizontalAlignment="Left" Height="17" VerticalAlignment="Top" Width="469">
            <MenuItem Header="Income" Height="16">
                <MenuItem Header="Add Income" Height="16" Width="150"/>
            </MenuItem>
            <MenuItem Header="Bills" Height="16">
                <MenuItem Name="addBillItem" Click="addBillItem_Click" Header="Add Bill" Height="16" Width="150"/>
            </MenuItem>
        </Menu>

    </Grid>
</Window>
